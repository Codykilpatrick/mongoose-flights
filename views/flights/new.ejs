<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form action="/flights" id="new-form" method="POST" >
    <label for="flight-input">Flight:</label>
    <input type="text" name="flight" id="flight-input">
    <label for="airport-input">Airport:</label>
    <input type="text" name="airport" id="airport-input">
    <label for="flightNo-input">Flight Number:</label>
    <input type="text" name="flightNo" id="flightNo-input">
    <label for="date-input">Departs:</label>
    <input type="text" name="date" id="date-input">
    <button type="submit">Add Flight</button>
  </form>
</main>

